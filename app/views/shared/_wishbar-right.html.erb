<div class="wishbar">
  <div class="wishbar-header">
    <p class="wishbar-title">Favourites</p>
    <p class="wishlists-counter"><%= wishlists.count %> items selected</p>
    <% if current_page?(room_planners_path) %>
      <%= link_to "Back to Search", room_wishlists_path, class: "button-planner", role: "button" %>
    <% else %>
      <%= link_to "Continue to Room Planner", room_planners_path, class: "button-planner", role: "button" %>
    <% end %>
  </div>
  <div class="wishitems-container scrollbar" id="style-4">
    <% if wishlists.any? %>
      <% wishlists.each do |wishlist| %>
        <div class="wishitem">
          <div class="wishitem-image" style="background-image: url('<%= wishlist.item.photo %>')"></div>
          <div class="wishitem-info">
            <p><%= wishlist.item.name %></p>
            <p>Â¥ <%= wishlist.item.price %></p>
            <div class="wishitem-lastline">
              <p><a class="text-decoration-none" href="<%= wishlist.item.shop_url %>" target="_blank">Shop</a></p>
              <% if current_page?(room_planners_path) %>
                <%= render "room_planners", wishlist: wishlist %>
              <% else %>
                <%= button_to wishlist_path(wishlist), method: :delete, data: {turbo_method: :delete}, class: "remove-button" do %>
                  <i class="fas fa-trash"></i>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <em class="empty-wishlist-text p-3">Add some items to your wishlist...</em>
    <% end %>
  </div>
</div>

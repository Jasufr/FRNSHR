<div data-refreshless-target="plannercard">
  <div class="planner-card">
    <div class="planner-image" style="background-image: url('<%= planner.item.photo %>')">
    </div>
    <div class="planner-card-infos">
      <p><%= planner.item.name %></p>
      <p>Â¥ <%= planner.item.price %></p>
    </div>
    <div class="remove-item-from-planner ">
      <%= simple_form_for [@room, @planner],url: planner_path(planner), method: :delete , data: { refreshless_target: "removeitem", action: "submit->refreshless#remove"} do |f| %>

<div class="container">
  <h1>Planner</h1>
  <h4>Your current swatch:</h4>
  <%=@planners.joins(:item).group('items.color').count%>
  <%@planners.each do |planner|%>
    <%= planner.item.color%>
  <%end%>
  <h4>Your planned items:</h4>
  <div class="row">
    <%@planners.each do |planner|%>
      <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
        <div class="card">
          <%= image_tag "#{planner.item.photo}"%>
          <div class="card-body">
            <%= planner.item.name %>
          </div>
        </div>
      </div>
    <%end%>
  </div>
  <div class="d-flex justify-content-center">
    <button type="button" class="btn btn-primary">Save my Plan</button>
  </div>
</div>

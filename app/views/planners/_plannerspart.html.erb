<div class="container">
  <h1 class="planner-heading">Room planner</h1>
  <div class ="floating">
    <h4>Your current swatch:</h4>
    <%= render "colorswatch"%>
  </div>
  <h4>Your planned items:</h4>
  <div class="row" data-refreshless-target="display">
    <%@planners.each do |planner|%>
      <%= render "planner_card", planner: planner%>
    <%end%>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "PDF", room_planners_path(@room, format: :pdf) %>
  </div>
</div>

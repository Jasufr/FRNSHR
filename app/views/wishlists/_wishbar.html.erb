<div class="card-container">
  <% if wishlists.any? %>
    <% wishlists.each do |wishlist| %>
      <div class="result">
        <div class="result-photo" style="background-image: url('<%= wishlist.item.photo %>');">
        </div>
        <div class="result-details">
          <h3><%= wishlist.item.name %></h3>
          <p>Â¥ <%= wishlist.item.price %></p>
        </div>
        <a class="remove-from-wishlist-button><i class="fa-solid fa-minus"></i></a>
      </div>
    <% end %>
  <% else %>
    <em>Add some items to your wishlist...</em>
  <% end %>
</div>

<div class="wishlist-title d-flex align-items-center">
  <h3 class="wishlist-heading">Favorites</h3>
  <% if current_page?(room_wishlists_path) %>
    <%= render "room_wishlists"%>
  <% end %>
</div>
<div class="wishlist-container">
  <% if wishlists.any? %>
    <% wishlists.each do |wishlist| %>
      <div class="wishlist-item">
        <div class="wishlist-photo" style="background-image: url('<%= wishlist.item.photo %>');">
        </div>
        <div class="d-flex flex-column wishlist-details ">
          <div class ="d-flex justify-content-between">
            <h3 class="text-center"><%= wishlist.item.name %></h3>
            <div><%= button_to wishlist_path(wishlist), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "hoverbutton" do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </div>
          </div>
          <div class="d-flex justify-content-between">
            <p>Â¥ <%= wishlist.item.price %><br>
              <a class="text-decoration-none color: $red" href="<%= wishlist.item.shop_url %>" target="_blank"><%= wishlist.item.shop_name %></a>
              <% if current_page?(room_planners_path) %>
                <%= render "room_planners", wishlist: wishlist %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <em>Add some items to your wishlist...</em>
    <% end %>
  </div>

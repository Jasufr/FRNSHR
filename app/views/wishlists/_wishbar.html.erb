<div class="card-container">
  <% if wishlists.any? %>
    <% wishlists.each do |wishlist| %>
      <div class="card d-flex justify-content-center">
        <div class="card">
          <img src="<%= wishlist.item.photo %>" alt="furniture_image">
          <div class="d-flex flex-column w-100 info-text align-content: between">
            <h3 style="text-align: end"> <%= wishlist.item.name %> </h3>
            <p> Â¥<%= wishlist.item.price %></p>
            <i class="fa-solid fa-trash"></i>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <em>Add some items to your wishlist...</em>
  <% end %>
</div>

<div class="container">
  <div class="form-container">
    <h1>Choose a Room</h1>
    <%= simple_form_for(@room, html: { data: { controller: 'colorscheme' } }) do |f| %>
      <%= f.input :room_type, as: :select, collection: Room::ROOMS, input_html: { name: 'room[palette][]', data: { colorscheme_target: 'room', action: 'change->colorscheme#roomchecking' }} %>
      <%= f.input :palette, as: :color, input_html: { name: 'room[palette][]', data: { colorscheme_target: 'usercolor', action: 'input->colorscheme#suggestion' }} %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div id="carouselExampleCaptions" class="carousel slide my-5" data-bs-ride="true">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="carousel-image" style="background-image: url('<%= image_path("bedroom.jpg")%>');"></div>
      <%= image_tag("palette_bedroom.png", class: "carousel-palette") %>
      <div class="carousel-caption d-none d-md-block">
        <h5 class="caption-shadow">Bedroom</h5>
        <p class="caption-shadow">Lull yourself to sleep with a soothing and refined palette.</p>
      </div>
    </div>
    <div class="carousel-item">
      <div class="carousel-image" style="background-image: url('<%= image_path("living.jpg")%>');"></div>
      <%= image_tag("palette_living.png", class: "carousel-palette") %>
      <div class="carousel-caption d-none d-md-block">
        <h5 class="caption-shadow">Living Room</h5>
        <p class="caption-shadow">A tasteful scheme for the center of your living space.</p>
      </div>
    </div>
    <div class="carousel-item">
      <div class="carousel-image" style="background-image: url('<%= image_path("dining.png")%>');"></div>
      <%= image_tag("palette_dining.png", class: "carousel-palette") %>
      <div class="carousel-caption d-none d-md-block">
        <h5 class="caption-shadow">Dining Room</h5>
        <p class="caption-shadow">Set the stage for your guests with an inviting theme.</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
